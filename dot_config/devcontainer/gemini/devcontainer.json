{
  "name": "Claude Code",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/anthropics/devcontainer-features/claude-code:latest": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.config/git/config,target=/home/vscode/.gitconfig,readonly",
    "type=bind,source=${localEnv:HOME}/.gemini,target=/home/vscode/.gemini",
    "type=bind,source=${localEnv:HOME}/.gemini/settings.json,target=/home/vscode/.gemini/settings.json,readonly"
  ]
}
